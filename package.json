{
  "name": "state-switch",
  "version": "0.2.0",
  "description": "State Switch is a Change Monitor/Guarder for Async Actions.",
  "main": "dist/state-switch.js",
  "types": "dist/state-switch.d.ts",
  "scripts": {
    "clean": "rm -fr dist/",
    "demo": "ts-node example/demo",
    "dist": "npm run clean && tsc",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --project tsconfig.json --type-check src/*.ts && tsc --noEmit",
    "test": "npm run lint && npm run test:ts",
    "test:ts": "blue-tape -r ts-node/register -r source-map-support/register dist/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zixia/state-switch.git"
  },
  "keywords": [
    "state",
    "switch",
    "monitor",
    "async"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zixia/state-switch/issues"
  },
  "homepage": "https://github.com/zixia/state-switch#readme",
  "devDependencies": {
    "@types/blue-tape": "^0.1.31",
    "blue-tape": "^1.0.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2"
  },
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "dist/",
    "src/"
  ]
}
