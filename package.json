{
  "name": "state-switch",
  "version": "0.15.10",
  "description": "State Switch is a Change Monitor/Guarder for Async Actions.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/src/mod.js",
      "require": "./dist/cjs/src/mod.js"
    }
  },
  "typings": "./dist/esm/src/mod.d.ts",
  "scripts": {
    "clean": "rm -fr dist/* bundles/*",
    "dist": "npm run clean && npm run build && npm run fixup",
    "fixup": "echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "lint": "npm run lint:es && npm run lint:ts",
    "rollup": "rollup -c",
    "lint:ts": "tsc --noEmit",
    "demo": "ts-node example/demo",
    "test": "npm run lint && npm run test:ts",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:ts": "tap --node-arg=--loader=ts-node/esm src/**/*.spec.ts tests/**/*.spec.ts",
    "lint:es": "eslint --ignore-pattern fixtures/ 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huan/state-switch.git"
  },
  "keywords": [
    "state",
    "switch",
    "monitor",
    "async"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huan/state-switch/issues"
  },
  "homepage": "https://github.com/huan/state-switch#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.13.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.16.2",
    "pkg-jq": "^0.2.11",
    "rollup": "^2.56.3",
    "rollup-plugin-json": "^4.0.0",
    "rxjs": "^7.3.0",
    "tsd": "^0.17.0",
    "tstest": "^0.7.3"
  },
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "bundles",
    "dist/",
    "src/"
  ],
  "dependencies": {
    "nop": "^1.0.0"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
